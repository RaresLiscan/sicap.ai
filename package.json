{
  "name": "sicap",
  "version": "0.2.0",
  "description": "Motor de cautare pentru achizitii publice",
  "workspaces": [
    "apps/*",
    "packages/*",
    "internal/*"
  ],
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "turbo": "latest",
    "@sicap/tsconfig": "workspace:*"
  },
  "packageManager": "pnpm@8.6.10"
}
