{
  "name": "sicap",
  "version": "0.2.0",
  "description": "Motor de cautare pentru achizitii publice",
  "workspaces": [
    "apps/*",
    "packages/*",
    "internal/*"
  ],
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "fmt": "turbo fmt",
    "ui:add": "pnpm --filter ui ui:add"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.1",
    "@sicap/tsconfig": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10"
}
